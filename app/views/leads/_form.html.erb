<%= form_for @lead, :html => { :class => "form-horizontal lead" } do |f| %>

  <% if @lead.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @lead.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nome Completo', :class => 'control-label col-lg-4' %>
    <div class="col-lg-8">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label 'Email', :class => 'control-label col-lg-4' %>
    <div class="col-lg-8">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label 'Profissão', :class => 'control-label col-lg-4' %>
    <div class="col-lg-8">
      <%= f.text_field :stack, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stack) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-11">
      <%= f.submit 'Registrar-se para a transformação!', :class => 'btn btn-success' %>
    </div>
  </div>

<% end %>
